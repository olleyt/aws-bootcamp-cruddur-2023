--build-arg REACT_APP_AWS_USER_POOLS_ID="${AWS_COGNITO_USER_POOL_ID}" \
--build-arg REACT_APP_CLIENT_ID="7tp9c32crfu6hk1rdk43qiah33" \
-t frontend-react-js \
-f Dockerfile.prod \
.